{
    "name": "rackspace/php-opencloud",
    "description": "PHP SDK for Rackspace APIs",
    "authors": [
        {
            "name": "Jamie Hannaford",
            "email": "jamie.hannaford@rackspace.com",
            "homepage" : "https://github.com/jamiehannaford"
        }
    ],
    "autoload": {
        "psr-4": {
            "Rackspace\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rackspace\\Test\\": "tests/unit/",
            "Rackspace\\Integration\\": "tests/integration/",
            "OpenStack\\Test\\": "vendor/php-opencloud/openstack/tests/unit/",
            "OpenStack\\Integration\\": "vendor/php-opencloud/openstack/tests/integration/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/php-opencloud/Sami"
        }
    ],
    "require": {
        "php" : ">=5.6",
        "php-opencloud/openstack": "~2.0"
    },
    "require-dev" : {
        "phpunit/phpunit": "~4.5",
        "sami/sami": "dev-master",
        "psr/log": "~1.0",
        "satooshi/php-coveralls": "~1.0",
        "jakub-onderka/php-parallel-lint": "0.*",
        "fabpot/php-cs-fixer": "~1.0"
    }
}
